[colors]
background = ${xrdb:background:#222}
;foreground = ${xrdb:foreground:#222}
foreground = ${xrdb:color15:#222}
red        = ${xrdb:color1:#222}
green      = ${xrdb:color2:#222}
yellow     = ${xrdb:color3:#222}
blue       = ${xrdb:color4:#222}
purple     = ${xrdb:color5:#222}
teal       = ${xrdb:color6:#222}
;theres no orange in the gruvbox pywal theme, use something else
orange     = ${xrdb:color15:#222}
gray       = ${xrdb:color8:#222}
lgray	   = ${xrdb:color7:#222}

[bar/bottombar]
monitor=${env:MONITOR}
; Size
width  = 100%
height = 22

; Position
bottom = true

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.foreground}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = meslolgs nf:size=9;2
font-1 = Font Awesome 5 Free Solid:size=10;2
font-2 = materialicons:size=10;2

; Modlues
modules-left   = i3 
modules-center = 
modules-right  = window-script xwindow

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize
scroll-up = #i3.prev
scroll-down = #i3.next


[bar/topbar]
monitor=${env:MONITOR}
; Size
width  = 100%
height = 14

; Position
bottom = false

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 1
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.foreground}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = meslolgs nf:size=8;2
font-1 = Font Awesome 5 Free Solid:size=9;2
font-2 = materialicons:size=9;2

; Modlues
modules-left   = updates-arch-aur memory cpu system-cpu-temppercore
modules-center = time date
modules-right  = eth pulseaudio bluetooth-script  
tray-position = right
tray-padding = 4
tray-maxsize = 12
tray-scale = 1.0
tray-background = ${colors.red}

; Cursor actions
cursor-click  = pointer

[module/xwindow]
type = internal/xwindow
format = <label>
label-background = ${colors.gray}
label-foreground = ${colors.foreground}
label-padding = 1

[module/bluetooth-script]
type = custom/script
exec = ~/.config/polybar/scripts/info-dualshock4.sh
tail = false
interval = 0
label-padding = 1
label-foreground = ${colors.foreground}
label-background = ${colors.red}

[module/test-script]
type = custom/script
exec = ~/.config/polybar/scripts/test2.sh
tail = true
interval = 0
label-padding = 1
label-foreground = ${colors.foreground}
label-background = ${colors.red}


[module/window-script]
type = custom/script
exec =~/.config/i3/i3-menus.sh --window-name
tail = true
interval = 0
label-padding = 1
label-foreground = ${colors.foreground}
label-background = ${colors.gray}
click-left = ~/.config/i3/i3-menus.sh --active


[module/updates-arch-aur]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-aur.sh
interval = 1200
label-background = ${colors.red}
label-foreground = ${colors.foreground}
label-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
wrapping-scroll = false
; Mouse click
enable-click = true
; Mouse scroll
enable-scroll = false
; Sort
index-sort = true
; Display icons
fuzzy-match = true
; Icons
ws-icon-0       = Discord;ﭮ
ws-icon-1       = Game; 
ws-icon-2       = Steam;
ws-icon-3       = Second Monitor;
ws-icon-4       = Scratch;
ws-icon-default = ﲾ
pin-workspaces = true
; Focused label
label-focused            = %icon%  %name%
label-focused-background = ${colors.green}
label-focused-foreground = ${colors.foreground}
label-focused-padding    = 1
; Unfocused label
label-unfocused            = %icon%  %name%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding    = 1
; Visible labels
label-visible            = %icon%  %name%
label-visible-foreground = ${colors.foreground}
label-visible-padding    = 1
; Urgent labels
label-urgent            = %icon%  %name%
label-urgent-foreground = ${colors.red}
label-urgent-padding    = 1

[module/system-cpu-temppercore]
type = custom/script
exec = ~/.config/polybar/scripts/system-cpu-temppercore.sh
;exec = ~/temp-sensors
interval = 5
