[colors]
background = ${xrdb:background:#222}
foreground = ${xrdb:foreground:#222}
red        = ${xrdb:color9:#222}
green      = ${xrdb:color2:#222}
yellow     = ${xrdb:color11:#222}
blue       = ${xrdb:color4:#222}
purple     = ${xrdb:color5:#222}
teal       = ${xrdb:color6:#222}
;theres no orange in the gruvbox pywal theme, use something else
orange     = ${xrdb:color15:#222}
gray       = ${xrdb:color8:#222}

[bar/mybar]
monitor=${env:MONITOR}
; Size
width  = 100%
height = 30

; Offset
;offset-x = 50%
;offset-y = 50%

; Position
bottom = true

; Radius
radius = 0

; Align modules fixed to middle
fixed-center = true

; Colors
background = ${colors.background}
foreground = ${colors.foreground}

; Underline
line-size  = 2
line-color = ${colors.foreground}

; Border
border-size  = 0
border-color = ${colors.background}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

; Font
font-0 = Iosevka:size=9;2
font-1 = Font Awesome 5 Free Solid:size=10;2
font-2 = siji:pixelsize=15;1
font-3 = materialicons:size=18;1

; Modlues
modules-left   = updates-arch-aur i3 xwindow
modules-center = time date
modules-right  = memory cpu eth pulseaudio system-cpu-temppercore 
tray-position = right
tray-padding = 4
tray-background = ${colors.red}

; Cursor actions
cursor-click  = pointer
cursor-scroll = ns-resize
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/updates-arch-aur]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-aur.sh
interval = 1200
label-background = ${colors.red}
label-foreground = ${colors.gray}
label-padding    = 2

[module/system-bluetooth-bluetoothctl]
type = custom/script
exec = ~/.config/polybar/scripts/system-bluetooth-bluetoothctl.sh
tail = true
click-left = ~/.config/polybar/scripts/system-bluetooth-bluetoothctl.sh --toggle &
label-background = ${colors.red}
label-foreground = ${colors.gray}
label-padding    = 2

[module/battery-dualshock4]
type = custom/script
exec = ~/.config/polybar/scripts/info-dualshock4.sh
interval = 10
label-background = ${colors.red}
label-foreground = ${colors.gray}
label-padding    = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
wrapping-scroll = false

; Mouse click
enable-click = true

; Mouse scroll
enable-scroll = false

; Sort
index-sort = true

; Display icons
fuzzy-match = true

; Icons
;ws-icon-0       = Main;
;ws-icon-1       = Terminal;
;ws-icon-2       = Web;
;ws-icon-3       = Program;
;ws-icon-4       = Design;
;ws-icon-default = 

pin-workspaces = true

; Focused label
label-focused            = %icon% %name%
label-focused-background = ${colors.green}
label-focused-foreground = ${colors.gray}
label-focused-padding    = 2

; Unfocused labels
label-unfocused            = %icon% %name%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding    = 2

; Visible labels
label-visible            = %icon% %name%
label-visible-foreground = ${colors.foreground}
label-visible-padding    = 2

; Urgent labels
label-urgent            = %icon% %name%
label-urgent-foreground = ${colors.red}
label-urgent-padding    = 2

[module/system-cpu-temppercore]
type = custom/script
exec = ~/.config/polybar/scripts/system-cpu-temppercore.sh
;exec = ~/temp-sensors
interval = 5
label-background = ${colors.yellow}
label-foreground = ${colors.gray}
label-padding    = 2

[module/weather]
type = custom/script

; Script
exec = /home/kat/.config/polybar/scripts/weather.sh

; Update interval
interval = 600

; Label
label            = %output%
label-foreground = ${colors.foreground}
label-padding    = 1

[module/time]
type = internal/date

; Update interval
interval = 1.0

; Format
time = %I:%M%P

; Label
label            =  %time%
label-foreground = ${colors.foreground}
label-padding    = 1

[module/date]
type = internal/date

; Update interval
interval = 1.0

; Format
date = %A, %d %B

; Label
label            = " %date%"
label-foreground = ${colors.foreground}
label-padding    = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:64:...%
label-padding = 2
label-background = ${colors.gray}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home
mount-1 = /run/media/HDD

label-mounted = %{F#b16286}%mountpoint%%{F-}: %percentage_free%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.red}
label-background = ${colors.purple}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-background = ${colors.blue}
format-prefix-foreground = ${colors.gray}
label = CPU: %percentage:2%%
label-background = ${colors.blue}
label-foreground = ${colors.gray}
label-padding = 2

[module/memory]
type = internal/memory
interval = 2
format = <label>
format-prefix-foreground = ${colors.purple}
label = RAM: %gb_used%/%gb_total%
label-background = ${colors.purple}
label-foreground = ${colors.gray}
label-padding = 2

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected-background = ${colors.teal}
format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.gray}
label-connected = "Connected "
label-connected-foreground = ${colors.gray}
label-padding = 2

;format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = Disconnected :(
label-disconnected-foreground = ${colors.gray}

[module/battery]
type = internal/battery

; Full battery level
full-at = 96

; Battery and adapter
battery = BAT0
adapter = AC0

; Charging label
label-charging            =  %percentage%%
label-charging-background = ${colors.teal}
label-charging-foreground = ${colors.foreground}
label-charging-padding    = 2

; Discharging label
label-discharging            =  %percentage%%
label-discharging-background = ${colors.red}
label-discharging-foreground = ${colors.foreground}
label-discharging-padding    = 2

; Full label
label-full            =  100%
label-full-background = ${colors.teal}
label-full-foreground = ${colors.foreground}
label-full-padding    = 2

[module/temperature]
